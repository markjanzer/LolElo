<div
  class="container mx-auto mt-8 sm:mt-12"
>
  <div class="flex justify-between items-center mb-4 lg:mb-6">
    <%= link_to "Home", root_path, class: "text-sm lg:text-base underline underline-offset-4 px-4" %>
    
    <div class="flex flex-row items-center">
      <% if @previous_serie.present? %>
        <%= render partial: "series/previous_serie", locals: { previous_serie: @previous_serie, visible: true } %>
      <% elsif @next_serie.present? %>
        <%= render partial: "series/next_serie", locals: { next_serie: @next_serie, visible: false } %>
      <% end %>
      <h1 class="flex-grow text-center text-xl sm:text-2xl md:text-3xl lg:text-4xl mx-4 md:mx-6 lg:mx-8">
        <%= "#{@serie.league.name} #{@serie.full_name}" %>
      </h1>
      <% if @next_serie.present? %>
        <%= render partial: "series/next_serie", locals: { next_serie: @next_serie, visible: true } %>
      <% elsif @previous_serie.present? %>
        <%= render partial: "series/previous_serie", locals: { previous_serie: @previous_serie, visible: false } %>
      <% end %>
    </div>

    <%= link_to "Home", root_path, class: "px-4 invisible" %>
  </div>

  <div class="bg-purple-popout p-4 md:p-8 mb-4 rounded-md shadow-xl">
    <%= content_tag :div,
      id: "chart",
      data: {
        chartData: @chart_data
      }.to_json do %>
    <% end %>
  </div>
</div>