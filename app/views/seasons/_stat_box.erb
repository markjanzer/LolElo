<div class="w-full sm:w-1/2 md:w-1/3 px-2 mb-4">
  <div class="bg-purple-popout rounded-xl p-4 h-full border-4" style="border-color: <%= team_color %>;">
    <h3 class="text-2xl font-bold"><%= title %></h3>
    <p 
      class="underline text-xl decoration-2"
      style="text-decoration-color: <%= team_color %>;"
    ><%= team_name %></p>
    <% sub_stats.each do |sub_stat| %>
      <p><%= sub_stat %></p>
    <% end %>
  </div>
</div>