<div class="w-1/2 md:w-1/3 px-1 mb-4">
  <div class="bg-purple-popout rounded-xl p-4 h-full min-h-48 drop-shadow-lg" >
    <h3 class="text-lg md:text-xl lg:text-2xl font-bold mb-2"><%= title %></h3>
    <p 
      class="underline text-base md:text-lg lg:text-xl decoration-2 mb-1"
      style="text-decoration-color: <%= team_color %>;"
    ><%= team_name %></p>
    <% sub_stats.each do |sub_stat| %>
      <p><%= sub_stat %></p>
    <% end %>
  </div>
</div>